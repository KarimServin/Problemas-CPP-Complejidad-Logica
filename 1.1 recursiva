#include <iostream>
using namespace std;

int invertir(int k);

int main() {
	
	int k=0;
	
	cout<< "Ingrese, por favor, el numero: ";
	cin>> k;
	

	
	
	return invertir(k);
}



int invertir(int k) {
    
	
    if(k==0) {
		
		return 0;
	}
	
	else {
		cout << k%10;
		return invertir(k/10);
	
		
	}
	
	
}


